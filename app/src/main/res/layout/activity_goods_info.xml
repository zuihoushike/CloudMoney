<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
              android:orientation="vertical"
    tools:context="name.hd.cloudmoney.GoodsInfoActivity">
    <View
        android:id="@+id/g_info_status_color"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <include layout="@layout/g_info_title"/>
            <include layout="@layout/g_info_menu"/>
            <include layout="@layout/g_info_goods_name"/>
            <include layout="@layout/g_info_lable"/>
            <include layout="@layout/g_info_cover_describe"/>
            <include layout="@layout/crude_split"/>
            <include layout="@layout/g_info_size_color"/>
            <include layout="@layout/g_info_price"/>
            <include layout="@layout/g_info_package"/>
            <include layout="@layout/crude_split"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
