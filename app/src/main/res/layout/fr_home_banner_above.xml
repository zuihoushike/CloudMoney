<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <name.hd.cloudmoney.jar.AutoPlayViewPager
        android:id="@+id/home_banner"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@id/home_banner"
        android:orientation="vertical">

        <View
            android:id="@+id/fr_home_status_color"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            />

        <include layout="@layout/fr_home_title" android:id="@+id/home_active_title"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/home_points"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_alignBottom="@id/home_banner"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:orientation="horizontal">
    </LinearLayout>

</RelativeLayout>
