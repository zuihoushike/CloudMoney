<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:padding="10dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/goods_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/nav_left_black"/>
    <TextView
        android:id="@+id/textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="商品管理"
        android:textColor="#000000"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/goods_back"
        android:layout_margin="5dp"
        android:textSize="22sp"/>
    <ImageView
        android:id="@+id/iv_goods_search1"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_toRightOf="@id/textview1"
        android:layout_centerVertical="true"
        android:src="@mipmap/search_box"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        />

    <ImageView
        android:id="@+id/iv_goods_search2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/goods_back"
        android:layout_alignLeft="@+id/iv_goods_search1"
        android:layout_alignStart="@+id/iv_goods_search1"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/search"/>
    <TextView
        android:id="@+id/tv_goods_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="搜索"
        android:textSize="17sp"
        android:textColor="#a0a0a0"
        android:layout_toRightOf="@id/iv_goods_search2"/>


</RelativeLayout>