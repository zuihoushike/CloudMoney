<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:padding="10dp">

    <ImageView
        android:id="@+id/angel_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@mipmap/xx1"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/angel_icon"
        android:layout_alignTop="@id/angel_icon"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/angel_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/angel_nickname"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="木木"
            android:textColor="#000000"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/angel_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="时间：2017-02-02"
            android:textColor="#a0a0a0"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/angel_icon"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/angel_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/angel_turnover"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="500.00"
            android:textColor="#000000"
            android:textSize="22sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="营业额(元)"
            android:textColor="#a0a0a0"
            android:textSize="18sp"/>
    </LinearLayout>

    <View
        android:id="@+id/view1"
        style="@style/SplitThin"
        android:layout_below="@id/angel_icon"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view1"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/angel_sub_commission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/orange_bg"
            android:gravity="center"
            android:padding="10dp"
            android:text="分佣10‰"
            android:textColor="#a0a0a0"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/angel_commission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/orange_bg"
            android:gravity="center"
            android:padding="10dp"
            android:text="佣金￥10.00"
            android:textColor="#a0a0a0"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/angel_order_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/orange_bg"
            android:gravity="center"
            android:padding="10dp"
            android:text="订单 5单"
            android:textColor="#a0a0a0"
            android:textSize="18sp"/>
    </LinearLayout>

</RelativeLayout>