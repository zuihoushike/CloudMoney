<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/xiang1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/view1"
    >

    <ImageView
        android:id="@+id/x1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        android:src="@mipmap/qw"/>

    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="13dp"
        android:layout_alignTop="@+id/x1"
        android:layout_alignBottom="@id/x1"
        android:layout_toRightOf="@+id/x1">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="蜜雪冰城(灞桥店)"
            android:textSize="18sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="暂无评分"
            android:textColor="#a0a0a0"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="￥6/人"
            android:textColor="#a0a0a0"
            android:textSize="15sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/ditu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/linearlayout1"
        android:drawableTop="@mipmap/btn_find_address"
        android:layout_marginRight="10dp"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:text="港务区.800m"
        android:textColor="#d1c7b7"
        android:textSize="15sp"/>
</RelativeLayout>