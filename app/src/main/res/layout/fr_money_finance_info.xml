<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="财经资讯"
        android:textSize="20sp"/>

    <View
        style="@style/SplitThin"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="3dp">

        <ImageView
            android:id="@+id/imageview1"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/money22"/>

        <RelativeLayout
            android:id="@+id/linearlayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imageview1"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            >

            <TextView
                android:id="@+id/textview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="基金在中国的发展趋势"
                android:textColor="#000000"
                android:paddingBottom="5dp"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/textview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textview1"
                android:text="作者：王思聪"
                android:paddingBottom="5dp"
                android:textColor="#444444"
                android:textSize="17sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textview2"
                android:singleLine="true"
                android:text="在中国，基金必将是财产的最终形态，带给所..."
                android:textColor="#a0a0a0"
                android:textSize="17sp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/textview5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="100"
                    android:textColor="#a0a0a0"
                    android:textSize="15sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/textview5"
                    android:padding="5dp"
                    android:src="@mipmap/money23"/>
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>

    <View
        style="@style/SplitThin"
        android:layout_marginTop="5dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        >

        <ImageView
            android:id="@+id/imageview2"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/money21"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imageview2"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="大盘行情，纯干货分享"
                android:paddingBottom="5dp"
                android:textColor="#000000"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/textview4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textview3"
                android:text="作者：知乎"
                android:paddingBottom="5dp"
                android:textColor="#444444"
                android:textSize="17sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textview4"
                android:singleLine="true"
                android:text="2017免费股票技巧投资交流群，纯干货分享，带..."
                android:textColor="#a0a0a0"
                android:textSize="17sp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               >

                <TextView
                    android:id="@+id/textview6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="200"
                    android:textColor="#a0a0a0"
                    android:textSize="15sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="5dp"
                    android:layout_toLeftOf="@id/textview6"
                    android:src="@mipmap/money23"/>
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>
