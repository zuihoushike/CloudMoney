<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="name.hd.cloudmoney.fragment.FindDynamicFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <include layout="@layout/fr_circle_circle_top"/>

            <include layout="@layout/fr_circle_circle_img"/>

            <View
                android:id="@+id/v1"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_marginTop="3dp"
                android:background="#a0a0a0"/>

            <include layout="@layout/fr_circle_circle_scan_com_fab"/>

            <include layout="@layout/crude_split"/>

            <include layout="@layout/fr_circle_circle_fab_num"/>

            <include layout="@layout/fr_circle_circle_comment_list"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:src="@mipmap/xl6"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
